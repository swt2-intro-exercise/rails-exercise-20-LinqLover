<h1>Listing Authors</h1>
 
<%= link_to 'New author', new_author_path %>

<table>
  <tr>
    <th>First Name</th>
		<th>Last Name</th>
    <th>Homepage</th>
    <th colspan="3"></th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.first_name %></td>
      <td><%= author.last_name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Delete', author_path(author),
              method: :delete,
              data: { confirm: 'Really delete this wonderful author?' } %></td>
    </tr>
  <% end %>
</table>
